<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/infoContactAvatar"
        android:layout_width="122dp"
        android:layout_height="124dp"
        android:layout_marginTop="28dp"
        android:background="#06952F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoContactSMSButton"
        app:layout_constraintTop_toBottomOf="@+id/infoContactSMSButton"
        app:srcCompat="@android:drawable/ic_input_add"
        tools:ignore="ImageContrastCheck,SpeakableTextPresentCheck" />

    <EditText
        android:id="@+id/infoContactFirstName"
        android:layout_width="203dp"
        android:layout_height="50dp"
        android:layout_marginBottom="32dp"
        android:hint="@string/first_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.396"
        app:layout_constraintStart_toEndOf="@+id/infoContactAvatar"
        app:layout_constraintTop_toTopOf="@+id/infoContactAvatar"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/infoContactLastName"
        android:layout_width="203dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:hint="@string/last_name"
        app:layout_constraintBottom_toBottomOf="@+id/infoContactAvatar"
        app:layout_constraintEnd_toEndOf="@+id/infoContactFirstName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoContactFirstName"
        app:layout_constraintTop_toBottomOf="@+id/infoContactFirstName" />

    <EditText
        android:id="@+id/infoContactAddress"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="208dp"
        android:hint="@string/address"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/infoContactEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoContactEmail"
        app:layout_constraintTop_toBottomOf="@+id/infoContactEmail" />

    <EditText
        android:id="@+id/infoContactEmail"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/infoContactPhoneNubmer"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editContactAvatarImageButton"
        app:layout_constraintTop_toBottomOf="@+id/infoContactPhoneNubmer"
        app:layout_constraintVertical_bias="0.076" />

    <EditText
        android:id="@+id/infoContactPhoneNubmer"
        android:layout_width="313dp"
        android:layout_height="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="352dp"
        android:ems="10"
        android:hint="@string/phone_numbe"
        android:inputType="phone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/infoContactAvatar"
        app:layout_constraintTop_toBottomOf="@+id/infoContactLastName"
        app:layout_constraintVertical_bias="0.627" />

    <ImageButton
        android:id="@+id/infoContactSMSButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.084"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101"
        app:srcCompat="@android:drawable/stat_notify_chat"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/infoContactCallButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/infoContactSMSButton"
        app:layout_constraintStart_toEndOf="@+id/infoContactSMSButton"
        app:layout_constraintTop_toTopOf="@+id/infoContactSMSButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/stat_sys_phone_call"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/infoContactEditButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:layout_marginStart="12dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/infoContactCallButton"
        app:layout_constraintStart_toEndOf="@+id/infoContactCallButton"
        app:layout_constraintTop_toTopOf="@+id/infoContactCallButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_edit"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/infoContactDeleteButton"
        android:layout_width="80dp"
        android:layout_height="60dp"
        android:background="@color/green"
        app:layout_constraintBottom_toBottomOf="@+id/infoContactEditButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.274"
        app:layout_constraintStart_toEndOf="@+id/infoContactEditButton"
        app:layout_constraintTop_toTopOf="@+id/infoContactEditButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_menu_delete"
        tools:ignore="SpeakableTextPresentCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>