<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/listFragment">
    <fragment
        android:id="@+id/listFragment"
        tools:layout="@layout/fragment_list"
        android:name="com.example.hangouts.ui.fragments.list.ListContactFragment"
        android:label="listFragment" >
        <action
            android:id="@+id/action_listFragment_to_addContactFragment"
            app:destination="@id/addContactFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="false" />
        <action
            android:id="@+id/action_listFragment_to_infoContactFragment"
            app:destination="@id/infoContactFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="false" />
    </fragment>

    <fragment
        android:id="@+id/addContactFragment"
        tools:layout="@layout/fragment_add_contact"
        android:name="com.example.hangouts.ui.fragments.add_contact.AddContactFragment"
        android:label="addContactFragment" >
        <action
            android:id="@+id/action_addContactFragment_to_listFragment"
            app:destination="@id/listFragment"
            app:popUpTo="@id/listFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/infoContactFragment"
        tools:layout="@layout/fragment_info_contact"
        android:name="com.example.hangouts.ui.fragments.InfoContactFragment"
        android:label="infoContactFragment" >

    </fragment>

</navigation>